<mvc:View
        controllerName="wwl.controller.Login"
        xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">
    <Page
            id="loginPage"
            busyIndicatorDelay="0"
    >
        <f:SimpleForm
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                id="enteteLoginForm"
                layout="ResponsiveGridLayout"
                title="Connexion"
                editable="true"
        >
            <f:content>
                <Label text="Nom d'utilisateur "/>
                <Input
                        id="usernameInput"
                >
                    <layoutData>
                        <l:GridData span="L4 M4 S12"/>
                    </layoutData>
                </Input>
                <Label text="Mot de passe "/>
                <Input
                        id="passwordInput"
                        type="Password"
                >
                    <layoutData>
                        <l:GridData span="L4 M4 S12"/>
                    </layoutData>
                </Input>
                <Label/>
                <Button
                        type="Accept"
                        text="Se connecter"
                        press="onConnectPress">
                    <layoutData>
                        <l:GridData span="L4 M4 S12"/>
                    </layoutData>
                </Button>
            </f:content>
        </f:SimpleForm>
    </Page>
</mvc:View>
